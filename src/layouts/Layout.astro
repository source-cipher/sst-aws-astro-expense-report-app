---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-slate-800">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Easy way to track your expenses" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/money-bag.svg" />
		<title>{title}</title>
	</head>
	<body>
		<main class="h-dvh flex flex-col">
			<slot />
		</main>
	</body>
</html>